<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.web>
      <customErrors defaultRedirect="500.html"
        mode="Off" xdt:Transform="Replace">
      </customErrors>
  </system.web>
  <location path="sitecore/base-standalone" xdt:Transform="Insert">
    <system.web>
      <authorization>
        <allow users="?,*" />
      </authorization>
    </system.web>
  </location>
</configuration>